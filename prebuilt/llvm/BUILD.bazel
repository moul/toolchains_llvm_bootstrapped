load("@bazel_lib//lib:transitions.bzl", "platform_transition_filegroup")
load("//prebuilt:platforms.bzl", "PLATFORMS")
load("//prebuilt/llvm:llvm_release.bzl", "llvm_release")

llvm_release(name = "llvm_release")

llvm_release(name = "windows_llvm_release", bin_suffix = ".exe")

[
    platform_transition_filegroup(
        name = "for_" + platform.split(":")[1],
        srcs = [
            ":windows_llvm_release" if "windows" in platform else ":llvm_release",
        ],
        target_platform = platform,
    )
    for platform in PLATFORMS
]
